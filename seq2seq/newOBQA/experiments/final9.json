{
  "dataset_reader": {
    "target_namespace": "target_tokens",
    "type": "copynet_seq2seq",
    "source_token_indexers": {
      "tokens": {
        "type": "single_id",
        "namespace": "source_tokens"
      },
"elmo": {
        "type": "elmo_characters"
      },
      "token_characters": {
        "type": "characters"
      },
    "pos_tags": {                                                             
        "type": "pos_tag",                                                      
        "namespace": "pos"                                                      
      },                                                                        
      "dependency_label": {                                                     
        "type": "dependency_label",                                             
        "namespace": "dependencies"                                             
      },                                                                        
      "ner_tags": {                                                             
        "type": "ner_tag",                                                      
        "namespace": "ner"                                                      
      }     
    }
  },
  "train_data_path": "data/trainDataSeq2seq.tsv",
  "validation_data_path": "data/devDataSeq2seq.tsv",
  "model": {
    "type": "copynetObqa",
    "source_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.300d.txt.gz",         
        "vocab_namespace": "source_tokens",
        "embedding_dim": 300,
        "trainable": false
      },
        "elmo":{
                "type": "elmo_token_embedder",
                "options_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x4096_512_2048cnn_2xhighway/elmo_2x4096_512_2048cnn_2xhighway_options.json",
                "weight_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x4096_512_2048cnn_2xhighway/elmo_2x4096_512_2048cnn_2xhighway_weights.hdf5",
                "do_layer_norm": false,
                "dropout": 0.2
            },
        "pos_tags": {                                                           
          "type": "embedding",                                                  
          "vocab_namespace": "pos",                                             
          "embedding_dim": 10                                                   
        },                                                                      
        "ner_tags": {                                                           
          "type": "embedding",                                                  
          "vocab_namespace": "ner",                                             
          "embedding_dim": 10                                                   
        },                                                                      
        "dependency_label": {                                                   
          "type": "embedding",                                                  
          "vocab_namespace": "dependencies",                                    
          "embedding_dim": 10                                                   
        } ,
      "token_characters": {
        "type": "character_encoding",
        "embedding": {
          "embedding_dim": 10
        },
        "encoder": {
          "type": "lstm",
          "input_size": 10,
          "hidden_size": 10,
          "num_layers": 2,
          "dropout": 0,
          "bidirectional": true
        }
      }
    },
    "encoder": {
      "type": "gru",
      "input_size": 1374,
      "hidden_size": 100,
      "num_layers": 2,
      "dropout": 0.2,
      "bidirectional": true
    },
    "attention": {
      "type": "bilinear",
      "vector_dim": 200,
      "matrix_dim": 200
    },
    "target_embedding_dim": 100,
    "beam_size": 3,
    "max_decoding_steps": 20
  },
  "iterator": {
    "type": "bucket",
    "padding_noise": 0.0,
    "batch_size" : 32,
    "sorting_keys": [["source_tokens", "num_tokens"]]
  },
  "trainer": {                             
    "validation_metric":"+overlap_based_metric",
    "optimizer": {
      "type": "sgd",
      "lr": 0.1
    },
    "learning_rate_scheduler": {
      "type": "cosine",
      "t_initial": 5,
      "t_mul": 1.5,
      "eta_mul": 0.9
    },
    "num_epochs": 100,
    "cuda_device": 0,
    "should_log_learning_rate": true,
    "should_log_parameter_statistics": false
  }
}
